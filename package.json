{
  "name": "vite-plugin-vercel-workspace-root",
  "private": "true",
  "type": "module",
  "scripts": {
    "dev": "pnpm run -C ./packages/vercel dev",
    "build": "pnpm --recursive --filter {packages/*} run build",
    "build:simple": "pnpm run -C ./examples/simple build",
    "build:hono": "pnpm run -C ./examples/hono build",
    "build:hono-edge": "pnpm run -C ./examples/hono build:edge",
    "typecheck": "pnpm -r typecheck",
    "test:e2e": "test-e2e",
    "format": "biome format --write .",
    "lint": "biome lint .",
    "prepublishOnly": "pnpm run test && changeset version",
    "publish:beta": "changeset pre enter beta && pnpm run prepublishOnly && changeset publish -r --tag beta && changeset pre exit",
    "publish:stable": "pnpm run prepublishOnly && changeset publish -r"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@brillout/test-e2e": "^0.6.19",
    "@changesets/cli": "^2.29.7",
    "@types/node": "^20.19.16",
    "cross-env": "^10.0.0",
    "playwright": "^1.55.0",
    "typescript": "^5.9.2"
  },
  "pnpm": {
    "overrides": {
      "path-to-regexp@>=4.0.0 <6.3.0": "^6.3.0"
    },
    "onlyBuiltDependencies": [
      "esbuild"
    ]
  },
  "packageManager": "pnpm@10.15.1"
}
